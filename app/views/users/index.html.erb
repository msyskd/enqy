<table class="index">
	<tr>
		<th>名前</th>
		<th>Email</th>
		<th></th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= user.full_name %></td>
		<td><%= user.email %></td>
		<td><%= link_to '表示', user %>
		<%= link_to '編集', edit_user_path(user) %>
		<% if user.destroyable? %>
		<%= link_to '削除', user, confirm: '削除しますか?', method: :delete %>
		<% end %> </td>
	</tr>
	<% end %>
</table>

